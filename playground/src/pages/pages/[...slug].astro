---
import { getEntry, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

const { slug } = Astro.params;
if (!slug) return Astro.redirect('/');

const page = await getEntry('pages', slug);
if (!page) return new Response(null, { status: 404 });

const sections = page.data.sections ?? [];
const { Content } = await render(page);
---

<Base title={page.data.title} description={page.data.description}>
  {sections.map((section) => {
    if (section.type === 'hero') return (
      <section class="bg-gradient-to-b from-violet-50 to-stone-50 py-24">
        <div class="max-w-3xl mx-auto px-6 text-center">
          <h1 class="text-4xl sm:text-5xl font-semibold tracking-tight text-stone-900">{section.heading}</h1>
          {section.subheading && <p class="mt-4 text-lg text-stone-500">{section.subheading}</p>}
        </div>
      </section>
    );

    if (section.type === 'features') return (
      <section class="py-20">
        <div class="max-w-5xl mx-auto px-6">
          {section.heading && <h2 class="text-2xl font-semibold text-stone-900 text-center mb-12">{section.heading}</h2>}
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {section.items.map((item) => (
              <div class="bg-white border border-stone-200 rounded-xl p-6">
                <h3 class="font-semibold text-stone-900">{item.title}</h3>
                {item.description && <p class="mt-2 text-sm text-stone-500">{item.description}</p>}
              </div>
            ))}
          </div>
        </div>
      </section>
    );

    if (section.type === 'cta') return (
      <section class="py-20 bg-stone-900 text-white">
        <div class="max-w-3xl mx-auto px-6 text-center">
          <h2 class="text-2xl font-semibold">{section.heading}</h2>
          <a href={section.buttonUrl} class="mt-6 inline-block bg-violet-600 hover:bg-violet-700 text-white font-medium px-6 py-3 rounded-lg transition-colors">
            {section.buttonText}
          </a>
        </div>
      </section>
    );
  })}

  <section class="py-16">
    <div class="max-w-3xl mx-auto px-6 prose prose-stone">
      <Content />
    </div>
  </section>
</Base>
