---
import { getCollection, getEntry, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

const { slug } = Astro.params;
if (!slug) return Astro.redirect('/blog');

const post = await getEntry('blog', slug);
if (!post) return Astro.redirect('/blog');

const author = await getEntry(post.data.author);
const { Content } = await render(post);
---

<Base title={post.data.title} description={post.data.description}>
  <article class="max-w-3xl mx-auto px-6 py-16">
    <a href="/blog" class="text-sm text-violet-600 hover:text-violet-700 transition-colors">&larr; Back to blog</a>

    <h1 class="mt-4 text-3xl sm:text-4xl font-semibold tracking-tight text-stone-900">
      {post.data.title}
    </h1>

    {post.data.description && (
      <p class="mt-3 text-lg text-stone-500">{post.data.description}</p>
    )}

    <div class="mt-4 flex items-center gap-3 text-sm text-stone-400">
      {author && <span class="text-stone-600 font-medium">{author.data.name}</span>}
      {post.data.publishedAt && (
        <>
          <span>&middot;</span>
          <time datetime={post.data.publishedAt.toISOString()}>
            {post.data.publishedAt.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
          </time>
        </>
      )}
    </div>

    {post.data.tags.length > 0 && (
      <div class="mt-4 flex gap-2">
        {post.data.tags.map((tag) => (
          <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-violet-50 text-violet-600">{tag}</span>
        ))}
      </div>
    )}

    <hr class="my-8 border-stone-200" />

    <div class="prose prose-stone prose-headings:font-semibold prose-a:text-violet-600 max-w-none">
      <Content />
    </div>

    {author && (
      <div class="mt-12 p-5 bg-stone-100 rounded-xl flex items-start gap-4">
        <div class="w-10 h-10 rounded-full bg-violet-100 flex items-center justify-center text-violet-600 font-semibold text-sm shrink-0">
          {author.data.name.charAt(0)}
        </div>
        <div>
          <p class="font-semibold text-stone-900">{author.data.name}</p>
          {author.data.bio && <p class="mt-1 text-sm text-stone-500">{author.data.bio}</p>}
        </div>
      </div>
    )}
  </article>
</Base>
